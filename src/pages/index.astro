---
export const prerender = true;

import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FadeIn from '../components/FadeIn.astro';
import ParallaxImage from '../components/ParallaxImage.astro';

import heroImage from '../assets/images/hero-tiramisu.jpg';
// Real product photos from public folder
const creationImage1 = '/WhatsApp Image 2026-02-07 at 17.25.24 (5).jpeg';
const creationImage2 = '/WhatsApp Image 2026-02-07 at 17.25.25.jpeg';
const creationImage3 = '/WhatsApp Image 2026-02-07 at 12.10.07.jpeg';

const tiramisuAbout = '/WhatsApp Image 2026-02-07 at 17.25.23 (1).jpeg';
const tiramisuQuote = '/WhatsApp Image 2026-02-07 at 12.10.08 (2).jpeg';
const tiramisuIngredient1 = '/WhatsApp Image 2026-02-07 at 12.10.08 (1).jpeg';
const tiramisuIngredient2 = '/WhatsApp Image 2026-02-07 at 12.10.07 (3).jpeg';

const featuredCreations = [
  { title: 'Wedding Cakes', category: 'custom, celebration', slug: 'wedding-cakes', image: creationImage1 },
  { title: 'Artisan Pastries', category: 'daily, french classics', slug: 'artisan-pastries', image: creationImage2 },
  { title: 'Celebration Desserts', category: 'events, birthdays', slug: 'celebration-desserts', image: creationImage3 },
];
---

<Base title="L'Atelier â€” Timeless Desserts">
  <Header transparent />
  
  <main>
    <!-- Hero Section -->
    <section class="relative h-screen flex items-center justify-center">
      <div class="absolute inset-0">
        <ParallaxImage 
          src={heroImage} 
          alt="Artisanal French pastries and desserts" 
          class="h-full"
          priority
          speed={0.2}
        />
        <!-- Subtle fade overlay for text readability -->
        <div class="absolute inset-0 bg-gradient-to-b from-background/50 via-background/30 to-background/70"></div>
      </div>
      
      <div class="relative z-10 text-center px-6 max-w-7xl mx-auto">
        <FadeIn>
          <img 
            src="/logo-footer.svg" 
            alt="L'Atelier - Timeless Desserts" 
            class="w-72 md:w-96 mx-auto mb-10"
          />
        </FadeIn>
        
        <FadeIn delay={300}>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/contact" 
              class="inline-block px-8 py-4 bg-secondary text-primary text-sm font-light uppercase tracking-widest hover:bg-secondary/80 transition-colors"
            >
              Get in touch
            </a>
            <a 
              href="/patisseries" 
              class="inline-block px-8 py-4 bg-secondary text-primary text-sm font-light uppercase tracking-widest hover:bg-secondary/80 transition-colors"
            >
              View creations
            </a>
          </div>
        </FadeIn>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
        <div class="w-px h-16 bg-accent/30 relative overflow-hidden">
          <div class="absolute top-0 left-0 w-full h-8 bg-accent animate-scroll"></div>
        </div>
      </div>
    </section>
    
    <!-- About Teaser -->
    <section class="py-32 px-6 lg:px-8 bg-white">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <FadeIn>
            <div class="space-y-6">
              <h2 class="font-display">
                crafting desserts that <em class="not-italic text-accent">delight</em> your senses
              </h2>
              <p class="text-muted leading-relaxed">
                We believe every dessert should be more than just delicious: it should feel 
                like a moment of pure joy, crafted with passion and artistry.
              </p>
              <p class="text-muted leading-relaxed">
                We work with clients who appreciate quality, creativity, and the art of 
                French patisserie. Our role is to transform your celebrations into 
                unforgettable experiences, one dessert at a time.
              </p>
              <a 
                href="/about" 
                class="inline-block text-sm uppercase tracking-widest text-accent border-b border-accent pb-1 hover:text-accent-warm hover:border-accent-warm transition-colors"
              >
                Learn more about us
              </a>
            </div>
          </FadeIn>
          
          <FadeIn delay={200}>
            <div class="aspect-[3/4] overflow-hidden">
              <img 
                src={tiramisuAbout}
                alt="Tarta de Santiago - Artisanal almond cake"
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
          </FadeIn>
        </div>
      </div>
    </section>
    
    <!-- Quote Section -->
    <section class="relative py-32 lg:py-48">
      <div class="absolute inset-0">
        <img 
          src={tiramisuQuote}
          alt="Handcrafted tiramisu"
          class="w-full h-full object-cover"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-primary/40"></div>
      </div>
      <div class="relative z-10 text-center">
        <p class="font-serif text-3xl md:text-5xl text-white italic leading-relaxed">
          "Every detail<br/>speaks your story."
        </p>
      </div>
    </section>
    
    <!-- Featured Creations -->
    <section class="py-32 px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <FadeIn>
          <div class="text-center mb-16">
            <h2 class="font-display">our creations</h2>
          </div>
        </FadeIn>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredCreations.map((creation, index) => (
            <FadeIn delay={index * 100}>
              <article class="group">
                <a href={`/patisseries/${creation.slug}`} class="block">
                  <div class="relative aspect-[4/5] overflow-hidden bg-secondary">
                    <img 
                      src={creation.image}
                      alt={creation.title}
                      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                      loading="lazy"
                    />
                  </div>
                </a>
                <div class="mt-4 space-y-1">
                  <h3 class="font-serif text-lg uppercase tracking-wide">
                    <a href={`/patisseries/${creation.slug}`} class="hover:opacity-70 transition-opacity">
                      {creation.title}
                    </a>
                  </h3>
                  <p class="text-sm text-muted">{creation.category}</p>
                </div>
              </article>
            </FadeIn>
          ))}
        </div>
        
        <FadeIn>
          <div class="text-center mt-16">
            <a 
              href="/patisseries" 
              class="inline-block text-sm uppercase tracking-widest text-accent border-b border-accent pb-1 hover:text-accent-warm hover:border-accent-warm transition-colors"
            >
              View all creations
            </a>
          </div>
        </FadeIn>
      </div>
    </section>
    
    <!-- Ingredients & Quality Section -->
    <section class="py-32 px-6 lg:px-8 bg-white">
      <div class="max-w-7xl mx-auto">
        <FadeIn>
          <div class="text-center mb-16">
            <h2 class="font-display">exceptional ingredients</h2>
            <p class="text-muted mt-4 max-w-2xl mx-auto">
              We source only the finest ingredients from trusted suppliers to create 
              desserts that are as beautiful as they are delicious.
            </p>
          </div>
        </FadeIn>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
          <FadeIn>
            <div class="group relative aspect-[3/4] overflow-hidden">
              <img 
                src={tiramisuIngredient1}
                alt="Tiramisu being served"
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-primary/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <div class="absolute bottom-6 left-6 right-6 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                <p class="text-background text-sm uppercase tracking-widest">Italian Mascarpone</p>
              </div>
            </div>
          </FadeIn>
          
          <FadeIn delay={150}>
            <div class="group relative aspect-[3/4] overflow-hidden">
              <img 
                src={tiramisuIngredient2}
                alt="Fresh tiramisu layers"
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-primary/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <div class="absolute bottom-6 left-6 right-6 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                <p class="text-background text-sm uppercase tracking-widest">Cocoa Dusted Perfection</p>
              </div>
            </div>
          </FadeIn>
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <section class="py-32 px-6 lg:px-8 bg-secondary">
      <div class="max-w-3xl mx-auto text-center">
        <FadeIn>
          <h2 class="font-display mb-6">ready to place an order?</h2>
          <p class="text-muted mb-10 leading-relaxed">
            Let's create something delicious together. Whether it's a wedding cake, 
            a special celebration, or artisanal pastries, we're here to delight you.
          </p>
          <a 
            href="/contact" 
            class="inline-block px-10 py-4 bg-accent text-white text-sm uppercase tracking-widest hover:bg-accent/90 transition-colors"
          >
            Place an order
          </a>
        </FadeIn>
      </div>
    </section>
  </main>
  
  <Footer />
</Base>

<style>
  @keyframes scroll {
    0% { transform: translateY(-100%); }
    100% { transform: translateY(200%); }
  }
  
  .animate-scroll {
    animation: scroll 2s ease-in-out infinite;
  }
</style>
